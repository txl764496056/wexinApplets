/* pages/posts/post-detail/post-detail.wxss */
.container{display: flex;flex-direction: column;}
.head-image{width:100%;}
.author-date{flex-direction:row;margin-left:30rpx;margin-top: 20rpx;}
.author-date image{width:60rpx;height:60rpx;vertical-align: middle;}
.author{font-size: 30rpx;font-weight: bold;margin-left:20rpx;vertical-align: middle;color:#666;}
.const-text{font-size: 24rpx;color:#999;margin-left: 20rpx;}
.date{font-size: 24rpx;margin-left: 30rpx;vertical-align: middle;color:#999;}
.title{margin-left: 40rpx;font-size: 36rpx;font-weight: bold;margin-top: 30rpx;letter-spacing: 2px;color:#4b556c;}
.tool{margin-top: 20rpx;}
.circle-img{float: right;margin-right: 40rpx;vertical-align: middle;}
.circle-img icon{font-size: 32rpx;color:#fff;margin-left:30rpx;width:60rpx;height:60rpx;border-radius: 50%;text-align:center;line-height:60rpx;}
.bg-color1{background-color:#ff6600;}
.bg-color2{background-color:#ccc;}
.horizon{width:660rpx;height:1px;background-color:#e5e5e5;vertical-align: middle;position: relative;top:36rpx;margin:0 auto;z-index:-99;}
.detail{color:#666;margin-left: 30rpx;margin-top: 20rpx;margin-right: 30rpx;line-height: 44rpx;letter-spacing: 2px;font-size: 28rpx;}