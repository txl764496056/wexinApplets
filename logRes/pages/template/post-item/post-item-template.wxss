.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  bacgkround-color: #fff;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  padding-: 5rpx;
}

.post-author {
  margin: 10rpx 0 20rpx 10px;
}

.post-author image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 5px;
}

.post-author text {
  font-size: 26rpx;
}

.post-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image {
  margin-left: 16px;
  width: 100%;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  margin-left: 20rpx;
  margin-right: 20px;
}

.post-like text, .post-like icon {
  margin-right: 5px;
  display: inline-block;
}
